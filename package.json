{
  "name": "spectres-of-the-cold",
  "version": "1.0.0",
  "description": "A game by Daniel Savage.",
  "main": "main.js",
  "scripts": {
    "start": "electron ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/danbolt/switch-compo.git"
  },
  "author": "Daniel Savage <dansvg@gmail.com>",
  "bugs": {
    "url": "https://github.com/danbolt/switch-compo/issues"
  },
  "homepage": "https://github.com/danbolt/switch-compo",
  "devDependencies": {
    "electron": "^1.8.3",
    "electron-builder": "^20.4.1"
  },
  "build": {
    "productName": "Spectres of the Cold",
    "appId": "com.danbolt.spectres",
    "copyright": "Copyright Â© 2018 Daniel Savage",
    "mac": {
      "category": "public.app-category.games",
      "target": "dmg",
      "icon": "icon.icns"
    },
    "win": {
      "icon": "icon.ico",
      "target": "zip"
    },
    "linux": {
      "target": "zip",
      "synopsis": "Here I felt my flesh become the food of my fears.",
      "description": "A stealth game.",
      "category": "Game"
    },
    "files": [
      "icon.*",
      "index.html",
      "asset/**/*",
      "lib/**/*",
      "package.json",
      "main.js",
      "src/**/*",
      "node_modules/**/*"
    ]
  }
}
